<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/radio_group"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:checkedButton="@+id/radio_share_txt"
    tools:context="com.baidu.music.sharesdk.ShareActivity$ShareFragment">

    <RadioButton
        android:id="@+id/radio_share_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分享文本"/>
    <RadioButton
        android:id="@+id/radio_share_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分享图片文字"/>
    <RadioButton
        android:id="@+id/radio_share_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分享音频文字"/>
    <RadioButton
        android:id="@+id/radio_share_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分享视频文字"/>
    <RadioButton
        android:id="@+id/radio_share_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分享URL"/>

</RadioGroup>
